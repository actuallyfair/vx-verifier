{
  "name": "verifier",
  "version": "1.0.1",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist && rm -rf src/generated && mkdir src/generated",
    "build": "npm run clean && npm run generate && tsc",
    "generate": "protoc --proto_path=./protobuf --plugin=./node_modules/.bin/protoc-gen-ts_proto  --ts_proto_opt=esModuleInterop=true --ts_proto_opt=exportCommonSymbols=false --ts_proto_out=./src/generated ./protobuf/commitment-context.proto ./protobuf/message-context.proto ./protobuf/reveal-context.proto ./protobuf/currency.proto",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/husseinhere/verifier.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/husseinhere/verifier/issues"
  },
  "homepage": "https://github.com/husseinhere/verifier#readme",
  "devDependencies": {
    "@types/pg": "^8.6.3",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "ts-proto": "^1.148.1",
    "tsafe": "^1.6.4",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@noble/curves": "^1.0.0",
    "@noble/hashes": "^1.3.0",
    "protobufjs": "^7.2.3"
  }
}
